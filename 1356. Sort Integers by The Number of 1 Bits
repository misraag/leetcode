class Solution {
public:
    vector<int> sortByBits(vector<int>& arr) {
        map<int, priority_queue<int, vector<int>, greater<int>>> mp;
        
        for(int i=0; i<arr.size(); i++){
            int bits = __builtin_popcount(arr[i]);
            mp[bits].push(arr[i]);
        }

        int n = mp.size();
        vector<int> res;
        for(auto it: mp){
            auto t = it.second;
            while(!t.empty()){
                int top = t.top();
                t.pop();
                res.push_back(top);
            }
        }

        return res;
    }
};